{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next: dev server",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm dev",
      "cwd": "${workspaceFolder}/apps/frontend",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Next: dev debug",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm dev:debug",
      "cwd": "${workspaceFolder}/apps/frontend",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Attach: Next dev (inspect)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "protocol": "inspector",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/**/node_modules/**"
      ]
    }
  ]
}
